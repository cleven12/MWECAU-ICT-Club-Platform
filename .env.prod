# Environment Configuration for Production

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here-use-strong-key
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mwecau_ict
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=your-database-host
DB_PORT=5432

# Email Configuration (Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Site Configuration
SITE_NAME=MWECAU ICT
SITE_URL=https://yourdomain.com
LOGIN_URL=/login/

# Cloudinary Configuration (Recommended for production)
USE_CLOUDINARY=True
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Social Media Links
FACEBOOK_URL=https://facebook.com/mwecau
TWITTER_URL=https://twitter.com/mwecau
INSTAGRAM_URL=https://instagram.com/mwecau
LINKEDIN_URL=https://linkedin.com/company/mwecau

# Application Settings
PICTURE_UPLOAD_DEADLINE=72
MEMBERSHIP_FEE=15000
MAX_UPLOAD_SIZE=5242880

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/mwecau_ict/app.log

# API Settings
API_PAGINATION_SIZE=20
API_RATE_LIMIT=100

# AWS S3 Configuration (Alternative to Cloudinary)
USE_S3=False
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
